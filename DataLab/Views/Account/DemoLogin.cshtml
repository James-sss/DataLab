@model DemoLoginVM

@{
    ViewBag.Title = "DemoLogin";
 }


<div class="login-section">
    <div class="form-container">
        <div class="row ">
            <div class="col-md-12 col-lg-12 col-md-12 col-lg-12">
                <div class="form-div">
                    <img src="~/Images/DataLab-Logo2.png" class="logo-img img-thumbnail">
                    <p>Demo login for guest users </p>
                    <form method="post">
                        <div class="form-content">
                            <div asp-validation-summary="All" class="text-danger"></div>

                            <div class="form-group">
                                <input asp-for="Email" value="GuestUser@gmail.com" class="form-control" placeholder="Email">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="Password" value="D-558c" class="form-control" placeholder="Password">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-group-lg btn-lg"> Log in</button>
                        </div>

                        <a asp-controller="Account" asp-action="Login" class="d-flex" style="color: #8c52ff;">
                            <i class="fas fa-arrow-left" style="color: #8c52ff"> Back</i>
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
