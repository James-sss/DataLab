@model LoginVm

@{
    ViewBag.Title = "Login";
}


<div class="login-section">
    <div class="form-container">
        <div class="row ">
            <div class="col-md-12 col-lg-12 col-md-12 col-lg-12">
                <div class="form-div">
                    <img src="~/Images/DataLab-Logo2.png" class="logo-img img-thumbnail">
                    <p>Authorized Users Only</p>
                    <form method="post">
                        <div class="form-content">
                            <div asp-validation-summary="All" class="text-danger"></div>

                            <div class="form-group">
                                <input asp-for="Email" class="form-control" placeholder="Email">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="Password" class="form-control" placeholder="Password">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <div class="custom-checkbox" style="display:flex;color:white">
                                    <label asp-for="RememberMe">
                                        <input asp-for="RememberMe" />
                                        @Html.DisplayNameFor(model => model.RememberMe)
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-group-lg btn-lg"> Log in</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>