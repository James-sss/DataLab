@model AddSensorTypeVM


@{
    ViewData["Title"] = "AddSensor";
    Layout = "_AdminLayout";
}


<link href="~/css/templateModification.css" rel="stylesheet" />


<div class="container-fluid">
    <p class="pt-3 mb-1 ml-1 d-flex pagetitle-single"> <br /> <span><i class="fa fa-sellsy"></i> &nbsp Manage Sensors</span> </p>

    <div class="row">
        <div class="col-xl-4 col-lg-4 col-md-4 col-sm-12">
            <div class="card mt-2">
                <div class="card-header">
                    <h3 class="card-title">Add New Sensor</h3>
                </div>

                <form method="post">
                    <div class="card-body">
                        <div class="form-group">
                            <div asp-validation-summary="All" class="text-danger"></div>

                            <label asp-for="SensorType"></label>
                            <input asp-for="SensorType" class="form-control" placeholder="Enter Sensor" />
                            <span asp-validation-for="SensorType" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary btn-submit">Submit</button>
                    </div>
                </form>
            </div>
        </div>


        @if (Model.ListSensorTypes != null) { 

            <div class="col-xl-8 col-lg-8 col-md-8 col-sm-12">
                <div class="card mt-2">
                    <div class="card-header">
                        <h3 class="card-title">All Added Sensors</h3>
                    </div>

                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-striped">


                            <thead>
                                <tr>
                                    <th>Sensor Type</th>
                                    <th></th>
                                </tr>
                            </thead>

                            <tbody>

                                @foreach (var sensor in Model.ListSensorTypes)
                                {

                                    <tr>
                                        <td>@sensor.SensorType </td>
                                        <td>
                                            <form method="post" asp-controller="Sensor" asp-action="DeleteSenser" asp-route-Id="@sensor.SensorTypeId">
                                                <a asp-controller="Sensor" asp-action="EditSensor" asp-route-Id="@sensor.SensorTypeId"><i class="btn btn-sm fas fa-edit table-fa"></i></a>
                                                <button class="btn btn-sm fa fa-trash-o table-fa" type="submit" onclick="return confirm('Are you sure you want to delete sensor: @sensor.SensorType')"></button>
                                            </form>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                          
                        </table>
                    </div>
                </div>
            </div>
         }
    </div>
</div>